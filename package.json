{
    "name": "bridlensis",
    "displayName": "BridleNSIS",
    "description": "Language syntax, IntelliSense and build system for BridleNSIS",
    "version": "1.2.1",
    "publisher": "idleberg",
    "license": "MIT OR GPL-2.0",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "scripts": {
        "build": "gulp && webpack --mode production",
        "dev": "webpack --mode none --watch",
        "lint": "vscode-linter",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run lint",
        "vscode:prepublish": "webpack --mode production"
    },
    "keywords": [
        "nsis",
        "bridlensis"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/vscode-bridlensis"
    },
    "homepage": "https://github.com/idleberg/vscode-bridlensis#readme",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-bridlensis/issues"
    },
    "main": "./lib/extension",
    "extensionDependencies": [
        "idleberg.nsis"
    ],
    "dependencies": {
        "vscode-get-config": "^0.2.0"
    },
    "devDependencies": {
        "@types/node": "^14.14.2",
        "babel-core": "^6.26.3",
        "babel-preset-es2015": "^6.24.1",
        "gulp": "^4.0.2",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^2.0.0",
        "husky": "^4.3.0",
        "ts-loader": "^8.0.6",
        "tslint": "^6.1.3",
        "vscode": "^1.1.37",
        "vscode-linter": "^0.3.1",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test"
        }
    },
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#232323",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:bridlensis"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "BridleNSIS",
            "properties": {
                "bridlensis.pathToJar": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "%bridleNsisPathToJar%"
                },
                "bridlensis.customArguments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "markdownDescription": "%bridleNsisDefaultArgs%"
                },
                "bridlensis.nsisHome": {
                    "type": "string",
                    "default": "",
                    "description": "Specify the NSIS home directory (tried to detect automatically if not specified)"
                }
            }
        },
        "languages": [
            {
                "id": "bridlensis",
                "aliases": [
                    "BridleNSIS"
                ],
                "extensions": [
                    ".bridle-nsi",
                    ".bridle-nsis",
                    ".bridle-nsh"
                ],
                "configuration": "./config/bridlensis.json"
            }
        ],
        "grammars": [
            {
                "language": "bridlensis",
                "scopeName": "source.nsis.bridle",
                "path": "./syntaxes/bridlensis.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "extension.bridlensis.transpile",
                "title": "BridleNSIS: Transpile code",
                "icon": {
                    "dark": "./images/icon--build-dark.svg",
                    "light": "./images/icon--build-light.svg"
                }
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+shift+b",
                "mac": "cmd+alt+b",
                "when": "editorFocus && editorLangId == bridlensis",
                "command": "extension.bridlensis.transpile"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == bridlensis",
                    "command": "extension.bridlensis.transpile",
                    "group": "navigation@1"
                }
            ]
        },
        "snippets": [
            {
                "language": "bridlensis",
                "path": "./snippets/core.BridleNSIS.json"
            }
        ]
    },
    "babel": {
        "presets": [
            "es2015"
        ]
    }
}
